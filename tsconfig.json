{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": ".",
    "declarationMap": true,
    "module": "es6",
    "noImplicitAny": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
