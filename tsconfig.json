{
    "compilerOptions": {
        "lib": ["es2020"],
        "module": "Node16",
        "moduleResolution": "Node16",
        "declaration": true,
        "noImplicitAny": true,
        "importHelpers": false,
        "outDir": "dist",
        "target": "ES2022",
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
