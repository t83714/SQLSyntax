{
    "compilerOptions": {
        "lib": ["es2020"],
        "module": "es2020",
        "declaration": true,
        "declarationDir": ".",
        "noImplicitAny": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "target": "es5",
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "ts-node": {
      "compilerOptions": {
        "module": "commonjs"
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
